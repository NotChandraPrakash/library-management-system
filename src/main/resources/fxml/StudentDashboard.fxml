<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@../styles/dashboard.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx"
      fx:controller="controllers.StudentDashboardController">
    <!-- Header Section -->
    <HBox style="-fx-background-color: linear-gradient(to right, #764ba2 0%, #667eea 100%); -fx-padding: 20;" spacing="20">
        <!-- Title Section -->
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="ðŸ›ï¸ Digital Library Management System" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
            <Label text="Student Dashboard" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14;"/>
            <Label text="Babasaheb Bhimrao Ambedkar University | Lucknow" style="-fx-text-fill: #b3b3b3; -fx-font-size: 11;"/>
        </VBox>

        <!-- User Info and Logout -->
        <VBox spacing="10" alignment="CENTER_RIGHT">
            <Label fx:id="lblStudentInfo" text="Logged in as: Student" style="-fx-text-fill: white; -fx-font-size: 12;"/>
            <!-- Wire logout button to controller -->
            <Button fx:id="btnLogout" text="ðŸšª Logout" onAction="#handleLogout" style="-fx-font-size: 12; -fx-padding: 8 20; -fx-background-color: #ff6b6b; -fx-text-fill: white;"/>
        </VBox>
    </HBox>

    <!-- Tab Pane for Student Options -->
    <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
        <!-- View Available Books Tab -->
        <Tab text="ðŸ“š Available Books">
            <VBox spacing="15" style="-fx-padding: 20;">
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="ðŸ”„ Refresh" onAction="#handleRefreshAvailableBooks" style="-fx-padding: 8 15; -fx-font-size: 12;"/>
                </HBox>
                <TableView fx:id="tblAvailableBooks" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colBookId" text="Book ID" prefWidth="80"/>
                        <TableColumn fx:id="colTitle" text="Title" prefWidth="150"/>
                        <TableColumn fx:id="colPublisher" text="Publisher" prefWidth="120"/>
                        <TableColumn fx:id="colEdition" text="Edition" prefWidth="80"/>
                        <TableColumn fx:id="colCopiesAvailable" text="Available Copies" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <!-- Issue Book Tab -->
        <Tab text="ðŸ“– Issue Book">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Request a Book" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                <GridPane hgap="10" vgap="15" style="-fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-color: #f9f9f9;">
                    <Label text="Book ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtIssueBookId" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="No. of Days:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtIssueDays" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Button text="ðŸ“¥ Issue Book" onAction="#handleIssueBook" GridPane.columnIndex="1" GridPane.rowIndex="2"
                            style="-fx-padding: 10 30; -fx-font-size: 12;"/>

                    <Label fx:id="lblIssueBookStatus" text="" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3"
                           style="-fx-font-size: 12;"/>
                </GridPane>
            </VBox>
        </Tab>

        <!-- Return Book Tab -->
        <Tab text="ðŸ”„ Return Book">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Return a Borrowed Book" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                <GridPane hgap="10" vgap="15" style="-fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-color: #f9f9f9;">
                    <Label text="Book ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtReturnBookId" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Button text="ðŸ”„ Return Book" onAction="#handleReturnBook" GridPane.columnIndex="1" GridPane.rowIndex="1"
                            style="-fx-padding: 10 30; -fx-font-size: 12;"/>

                    <Label fx:id="lblReturnBookStatus" text="" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2"
                           style="-fx-font-size: 12;"/>
                </GridPane>
            </VBox>
        </Tab>

        <!-- My Issued Books Tab -->
        <Tab text="ðŸ“‹ My Issued Books">
            <VBox spacing="15" style="-fx-padding: 20;">
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="ðŸ”„ Refresh" onAction="#handleRefreshMyBooks" style="-fx-padding: 8 15; -fx-font-size: 12;"/>
                </HBox>
                <TextArea fx:id="txtMyIssuedBooks" VBox.vgrow="ALWAYS" editable="false" wrapText="true"
                          style="-fx-font-size: 11; -fx-padding: 10;"/>
            </VBox>
        </Tab>

        <!-- Change Password Tab -->
        <Tab text="ðŸ”‘ Change Password">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Update Your Password" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                <GridPane hgap="10" vgap="15" style="-fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-color: #f9f9f9;">
                    <Label text="New Password:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <PasswordField fx:id="txtNewPassword" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Confirm Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <PasswordField fx:id="txtConfirmPassword" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Button text="ðŸ”’ Change Password" onAction="#handleChangePassword" GridPane.columnIndex="1" GridPane.rowIndex="2"
                            style="-fx-padding: 10 20; -fx-font-size: 12;"/>

                    <Label fx:id="lblChangePasswordStatus" text="" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3"
                           style="-fx-font-size: 12;"/>
                </GridPane>
            </VBox>
        </Tab>
    </TabPane>
</VBox>
